<div class="post">
  <div class="post-image">
    <%= link_to image_tag("img-6.jpg"), post_path(post) %>
  </div>
  <div class="post-title">
    <h4><%= link_to post.title, post_path(post) %></h4>
  </div>
  <div>
    <%= post.content.truncate Settings.Post.truncate_word %>
    <%= link_to t(".read_more"), post_path(post) %>
  </div>
</div>
