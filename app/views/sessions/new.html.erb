<% provide :title, t(".title") %>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
        <h1 class="title_login"><%= t ".title" %></h1>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: t(".enter_email"), class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: t(".enter_password"), class: "form-control" %>
        </div>
        
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span><%= t ".remember_login"%></span>
        <% end %>
        
        <div class="text-center">
          <%= f.submit t(".login"), class: "btn btn-info col-lg-12" %>
        </div>
        <div class="text-left">
          <%= link_to t(".register_now"), new_user_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
