<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
      <%= link_to image_tag("logo.svg"), root_url, class:"navbar-brand" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
          <%= link_to t(".hotel"), hotels_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".about"), about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".contact"), Settings.layouts.header.contact, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".help"), hotels_path, class: "nav-link" %>
          </li>
        </ul>

        <ul class="nav justify-content-end">
        <% if logged_in? %>
          <li><%= link_to current_user.user_name, current_user %></li>
          <li class="dropdown">
          <%= link_to t(".head_acount"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
          <ul class="dropdown-menu">
            <li><%= link_to t(".head_profile"), current_user %></li>
            <li><%= link_to t(".head_setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t(".head_logout"), logout_path, method: :delete %>
            </li>
          </ul>
        <% else %>
          <li class="nav-item">
            <%= link_to t(".login"), login_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".sign_up"), signup_path, class: "nav-link active" %>
          </li>
        </ul>
        <% end %>
      </div>
    </nav>
  </div>
</header>
