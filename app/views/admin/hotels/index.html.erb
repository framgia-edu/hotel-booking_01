<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= t ".page_header" %>
    </h1>
  </div>
  <!-- /.col-lg-12 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".panel_heading" %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table width="100%" class="table table-striped table-bordered table-hover table-responsive dataTable no-footer dtr-inline responsive"
                  id="dataTables-hotel" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                  <thead>
                    <tr role="row">
                      <th class="sorting_asc" tabindex="0">
                        <%= t ".id" %>
                      </th>
                      <th class="sorting_asc" tabindex="1">
                        <%= t ".image" %>
                      </th>
                      <th class="sorting_asc" tabindex="2">
                        <%= t ".name" %>
                      </th>
                      <th class="sorting_asc" tabindex="3">
                        <%= t ".detail" %>
                      </th>
                      <th class="sorting_asc" tabindex="4">
                        <%= t ".owner" %>
                      </th>
                      <th class="sorting_asc" tabindex="5">
                        <%= t ".created_at" %>
                      </th>
                      <th class="sorting_asc" tabindex="6">
                        <%= t ".updated_at" %>
                      </th>
                      <th class="sorting_asc" tabindex="7">
                        <%= t ".action" %>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @hotels %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
