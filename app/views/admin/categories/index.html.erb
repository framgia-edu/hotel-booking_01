<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= t ".page_header" %>
      <%= link_to new_admin_category_path,
          class: "btn btn-info btn-outline pull-right" do %>
      <i class="fa fa-plus"></i>
      <%= t ".new" %>
      <% end %>
    </h1>
  </div>

  <!-- /.col-lg-12 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".panel_heading" %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table width="100%" class="table table-striped table-bordered
                    table-hover table-responsive dataTable no-footer dtr-inline responsive"
                  id="dataTables-categories" role="grid" aria-describedby="dataTables-categories_info" style="width: 100%;">
                  <thead>
                    <tr role="row">
                      <th tabindex="0">
                        <%= t ".id" %>
                      </th>
                      <th tabindex="1">
                        <%= t ".name" %>
                      </th>
                      <th tabindex="2">
                        <%= t ".posts_count" %>
                      </th>
                      <th tabindex="3">
                        <%= t ".description" %>
                      </th>
                      <th tabindex="3">
                        <%= t ".created_at" %>
                      </th>
                      <th tabindex="4">
                        <%= t ".updated_at" %>
                      </th>  
                      <th tabindex="5">
                        <%= t ".action" %>
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @categories %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
</div>
